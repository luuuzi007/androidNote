<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        style="@style/TitleHome"
        android:text="高级工具"/>
    <TextView 
        android:id="@+id/tv_query_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="归属地查询"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/select_tool_item"/>
    <TextView 
        android:id="@+id/tv_sms_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信备份"
        android:gravity="center"
        android:textSize="18sp"
         android:padding="5dp"
        android:background="@drawable/select_tool_item"/>
    <TextView 
        android:id="@+id/tv_query_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常用号码查询"
        android:gravity="center"
        android:textSize="18sp"
         android:padding="5dp"
        android:background="@drawable/select_tool_item"/>
    <TextView 
        android:id="@+id/tv_application_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="程序锁"
        android:gravity="center"
        android:textSize="18sp"
         android:padding="5dp"
        android:background="@drawable/select_tool_item"/>

</LinearLayout>
